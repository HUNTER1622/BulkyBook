@model Category
@{
    ViewData["Title"] = "Delete";
}

<div class="container border 2px solid p-4 mt-4">
    <div>
        <div class="row text-primary">
            <h4>Delete Category</h4>
            <hr />
        </div>

        <div class="row">
            <form asp-action="Delete" asp-controller="Category" method="post">
                @*<div asp-validation-summary="All"></div>*@
                @*Sare errors ynha display honge using asp-validation-summary*@
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label" asp-for="Name"></label>
                    <input class="form-control" disabled asp-for="Name" autocomplete="off" />
                   
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="DisplayOrder"></label>
                    <input class="form-control" disabled asp-for="DisplayOrder" autocomplete="off" />
                    
                </div>
                <div class="mb-3">
                    <button class="btn btn-danger" type="submit" asp-action="Delete" style="width:150px">Delete</button>
                    <a class="btn btn-success" style="width:150px" asp-action="Index" asp-controller="Category" >Back to list</a>
                </div>

            </form>
        </div>
    </div>
</div>

