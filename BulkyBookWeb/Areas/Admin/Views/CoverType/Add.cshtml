@model CoverType

@{
    ViewData["Title"] = "Create";
}

<div class="container border 2px solid p-4 mt-4">
    <div class="row">
        <h4>Create CoverType</h4>
        <hr />
    </div>
    <div class="row">
        <form asp-action="Add" asp-controller="CoverType" method="post">
            <div class="mb">
                <label class="form-label">Cover Type Name</label>
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mt-3 w-20">
                <button class="btn btn-primary" type="submit" asp-action="Add" style="width:150px">Add CoverType</button>
                <a class="btn btn-success" style="width:150px" asp-action="Index" asp-controller="CoverType">Back to list</a>
            </div>
        </form>
    </div>

</div>