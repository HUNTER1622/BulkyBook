@model Category
@{
    ViewData["Title"] = "Edit";
}

<div class="container border 2px solid p-4 mt-4">
    <div>
        <div class="row text-primary">
            <h4>Edit Category</h4>
            <hr />
        </div>

        <div class="row">
            <form asp-action="Edit" asp-controller="Category" method="post">
                @*<div asp-validation-summary="All"></div>*@
                @*Sare errors ynha display honge using asp-validation-summary*@
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label" asp-for="Name"></label>
                    <input class="form-control" asp-for="Name" autocomplete="off" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="DisplayOrder"></label>
                    <input class="form-control" asp-for="DisplayOrder" autocomplete="off" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary" type="submit" asp-action="Edit" style="width:150px">Update</button>
                    <a class="btn btn-success" style="width:150px" asp-action="Index" asp-controller="Category" >Back to list</a>
                </div>

            </form>
        </div>
    </div>
</div>
@*Client Side Validation*@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
